#include <iostream>
using namespace std;

struct node {
	int x;
	node* next;
	node* previous;
};

node* head = NULL;

void storeNodes () {
	head = new node;
	head->x = 10;
	head->previous = NULL;
	node* n1 = new node;
	n1->x = 20;
	n1->previous = head;
	head->next = n1;
	node* n2 = new node;
	n2->x = 30;
	n2->previous = n1;
	n1->next = n2;
	node* tail = new node;
	tail->x = 40;
	tail->previous = n2;
	n2->next = tail;
	tail->next = NULL;
}

void deleteTail () {
	char Q;
	cout << "Delete Tail? ('Y'/'N'):" << endl;
	cin >> Q;
	if (Q=='N' || Q=='n') {
		cout << "Delete Canceled!" << endl;
		return;
	} else if (Q=='Y' || Q=='y') {
		node* search = head;
		while (search->next != NULL) {
			search = search->next;
		}
		search->previous->next = NULL;
		delete search;
		cout << "Tail Successfully Deleted!" << endl;
	} else {
		cout << "Invalid Answer!" << endl;
		return;
	}
}

void display () {
	node* dis = head;
	while (dis != NULL) {
		cout << dis->x << "  ";
		dis = dis->next;
	}
	cout << endl;
}

int main () {
	storeNodes();
	deleteTail();
	display();
}

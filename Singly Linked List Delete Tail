#include <iostream>
using namespace std;

struct node {
	int x;
	node* next;
};

node* head = NULL;

void deleteTail () {
	head = new node;
	head->x = 10;
	node* n1 = new node;
	n1->x = 20;
	head->next = n1;
	node* n2 = new node;
	n2->x = 30;
	n1->next = n2;
	node* tail = new node;
	tail->x = 40;
	n2->next = tail;
	tail->next = NULL;
	
	char Q;
	cout << "Delete Tail? (\"Y\"/\"N\"):" << endl;
	cin >> Q;
	if (Q=='Y' || Q=='y') {
		node* srch = head;
		node* prev = NULL;
		while (srch->next != NULL) {
		   prev = srch;
		   srch = srch->next;
	   }
	   delete srch;
	   prev->next = NULL;
	   cout << "Tail Successfully Deleted!" << endl;
	   return;
	} else if (Q=='N' || Q=='n') {
		cout << "Delete Canceled!" << endl;
		return;
	} else {
		cout << "Invalid Input!" << endl;
		return;
	}
}

void display () {
	node* dis = head;
	while (dis != NULL) {
		cout << dis->x << "  ";
		dis = dis->next;
	}
	cout << endl;
}

int main () {
	deleteTail();
	display();
}

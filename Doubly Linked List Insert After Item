#include <iostream>
using namespace std;

struct node {
	int x;
	node* next;
	node* previous;
};

node* head = NULL;

void storeNodes () {
	head = new node;
	head->x = 10;
	head->previous = NULL;
	node* n1 = new node;
	n1->x = 20;
	n1->previous = head;
	head->next = n1;
	node* n2 = new node;
	n2->x = 30;
	n2->previous = n1;
	n1->next = n2;
	node* tail = new node;
	tail->x = 40;
	tail->previous = n2;
	n2->next = tail;
	tail->next = NULL;
}

void insertAfterItem () {
	int sit;
	cout << "Enter Search Item:" << endl;
	cin >> sit;
	node* search = head;
	while (search != NULL) {
		if (search->x == sit) {
			break;
		}
		search = search->next;
	}
	if (search == NULL) {
		cout << "Item Not Found!" << endl;
		return;
	} else {
		node* temp = new node;
		cout << "Enter Item To Be Inserted After " << sit << ":" << endl;
		cin >> temp->x;
		if (search == head) {
			temp->previous = head;
			temp->next = head->next;
			head->next = temp;
		} else if (search->next == NULL) {
			temp->next = NULL;
			temp->previous = search;
			search->next = temp;
		} else {
			temp->previous = search;
			temp->next = search->next;
			search->next = temp;
		}
	}
}

void display () {
	node* dis = head;
	while (dis != NULL) {
		cout << dis->x << "  ";
		dis = dis->next;
	}
	cout << endl;
}

int main () {
	storeNodes();
	insertAfterItem();
	display();
}

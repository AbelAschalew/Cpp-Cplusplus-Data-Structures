#include <iostream>
using namespace std;

struct node {
	int x;
	node* next;
};

node* head = NULL;

void replaceHead () {
	head = new node;
	head->x = 10;
	node* n1 = new node;
	n1->x = 20;
	head->next = n1;
	node* n2 = new node;
	n2->x = 30;
	n1->next = n2;
	node* tail = new node;
	tail->x = 40;
	n2->next = tail;
	tail->next = NULL;
	
	node* nhead = new node;
	cout << "Enter New Head:" << endl;
	cin >> nhead->x;
	node* temp = head;
	nhead->next = temp->next;
	head = nhead;
	delete temp;
}

void display () {
	node* dis = head;
	while (dis != NULL) {
		cout << dis->x << "  ";
		dis = dis->next;
	}
	cout << endl;
}

int main () {
	replaceHead();
	display();
}

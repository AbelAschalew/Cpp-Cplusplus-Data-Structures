#include <iostream>
using namespace std;

struct node {
	int x;
	node* next;
};

node* head = NULL;

void insAftItem () {
	head = new node;
	head->x = 10;
	node* node1 = new node;
	node1->x = 20;
	head->next = node1;
	node* node2 = new node;
	node2->x = 30;
	node1->next = node2;
	node* tail = new node;
	tail->x = 40;
	node2->next = tail;
	tail->next = NULL;
	
	int sitem;
	cout << "Enter Search Item:" << endl;
	cin >> sitem;
	node* srch = head;
	node* nxt;
	while (srch != NULL) {
		if (srch->x == sitem) {
		   nxt = srch->next;
		   break;
	   }
	   srch = srch->next;
	}
	if (srch == NULL) {
		cout << "Item Not Found!" << endl;
		return;
	} else {
		cout << "Item Found!" << endl;
	}
	
	node* nitem = new node;
	cout << "Enter New Item:" << endl;
	cin >> nitem->x;
	srch->next = nitem;
	nitem->next = nxt;
}

void display () {
	node* dis = head;
	while (dis != NULL) {
		cout << dis->x << "  ";
		dis = dis->next;
	}
	cout << endl;
}

int main () {
	insAftItem();
	display();
}
